<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="120dp"
        android:paddingVertical="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonSin"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DED8EB"
                android:elevation="3dp"
                android:onClick="handleSin"
                android:text="sin"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonAC"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DCD6E9"
                android:elevation="3dp"
                android:onClick="handleAC"
                android:text="AC"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonC"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DCD6E9"
                android:elevation="3dp"
                android:onClick="handleC"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonBK"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DCD6E9"
                android:elevation="3dp"
                android:onClick="handleBK"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_input_delete"
                app:iconGravity="textStart"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DCD6E9"
                android:elevation="3dp"
                android:onClick="handleDivide"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonCos"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DED8EB"
                android:elevation="3dp"
                android:onClick="handleCos"
                android:text="cos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonTg"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DED8EB"
                android:elevation="3dp"
                android:onClick="handleTg"
                android:text="tg"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button7"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DBD5E8"
                android:elevation="3dp"
                android:onClick="handleNum7"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DBD5E8"
                android:elevation="3dp"
                android:onClick="handleNum8"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DBD5E8"
                android:elevation="3dp"
                android:onClick="handleNum9"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DBD5E8"
                android:elevation="3dp"
                android:onClick="handleMultiply"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonPerc"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DED8EB"
                android:elevation="3dp"
                android:onClick="handlePerc"
                android:text="%"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonSqrt"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DED8EB"
                android:elevation="3dp"
                android:onClick="handleSqrt"
                android:text="@string/sqrt"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleNum4"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleNum5"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleNum6"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSub"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleSub"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonPow2"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DDD7EA"
                android:elevation="3dp"
                android:onClick="handlePow2"
                android:text="@string/pow2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonPowy"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DDD7EA"
                android:elevation="3dp"
                android:onClick="handlePowy"
                android:text="@string/powy"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button1"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleNum1"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleNum2"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleNum3"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DAD4E7"
                android:elevation="3dp"
                android:onClick="handleAdd"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonLog"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DDD7EA"
                android:elevation="3dp"
                android:onClick="handleLog"
                android:text="log"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonLn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#DCD6E9"
                android:elevation="3dp"
                android:onClick="handleLn"
                android:text="ln"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonChange"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleCh"
                android:text="+/-"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button0"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleNum0"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDot"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleDot"
                android:text="."
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleEquals"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textViewEstimate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginVertical="5dp"
        android:autoSizeMaxTextSize="34sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeTextType="uniform"
        android:maxLength="16"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <TextView
        android:id="@+id/textViewFinal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeMinTextSize="34sp"
        android:autoSizeTextType="uniform"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingHorizontal="120dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>
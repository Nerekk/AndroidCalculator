<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".BasicActivity">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="800dp"
        android:padding="100dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEstimate"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonAC"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleAC"
                android:text="AC"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonC"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleC"
                android:text="C"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonBK"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleBK"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp"
                app:icon="@android:drawable/ic_input_delete"
                app:iconGravity="textStart"
                app:iconSize="60dp" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D9D3E6"
                android:elevation="3dp"
                android:onClick="handleDivide"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D8D2E5"
                android:elevation="3dp"
                android:onClick="handleNum7"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/button8"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D8D2E5"
                android:elevation="3dp"
                android:onClick="handleNum8"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D8D2E5"
                android:elevation="3dp"
                android:onClick="handleNum9"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D8D2E5"
                android:elevation="3dp"
                android:onClick="handleMultiply"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D7D1E4"
                android:elevation="3dp"
                android:onClick="handleNum4"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D7D1E4"
                android:elevation="3dp"
                android:onClick="handleNum5"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D7D1E4"
                android:elevation="3dp"
                android:onClick="handleNum6"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonSub"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D7D1E4"
                android:elevation="3dp"
                android:onClick="handleSub"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleNum1"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleNum2"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleNum3"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleAdd"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonChange"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleCh"
                android:text="+/-"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/button0"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleNum0"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonDot"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleDot"
                android:text="."
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:backgroundTint="#D6D0E3"
                android:elevation="3dp"
                android:onClick="handleEquals"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="48sp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textViewEstimate"
        android:layout_width="716dp"
        android:layout_height="132dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeMinTextSize="40sp"
        android:autoSizeTextType="uniform"
        android:maxLength="16"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFinal" />

    <TextView
        android:id="@+id/textViewFinal"
        android:layout_width="721dp"
        android:layout_height="203dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:autoSizeMaxTextSize="180sp"
        android:autoSizeMinTextSize="90sp"
        android:autoSizeTextType="uniform"
        android:maxLength="16"
        android:maxLines="1"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="120sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>